  - @exercises.each do |exercise|
    %tr
      
      %td= link_to exercise.name , exercise, :class => 'name'
      %td= truncate(exercise.description, :length => 80, :omission => "...")
      %td= raw exercise.tags.map(&:name).map { |t| link_to t, tag_path(t), :class => 'btn' }.join(' ')
      %td=  link_to '/' , edit_exercise_path(exercise), :class => 'edit'
      %td= link_to 'X', exercise, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'edit'


