%p#notice= notice

%h1
  = @exercise.name

.row
  .span7 
    =  simple_format @exercise.description
  .span1
  .span4
    =  raw @exercise.tags.map(&:name).map { |t| link_to t, tag_path(t), :class => 'btn btn-large' }.join(' ')
    %hr
     
      = link_to '/', edit_exercise_path(@exercise), :class => 'controls'
